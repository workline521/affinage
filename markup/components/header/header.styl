*
    box-sizing border-box
h1, h2, p
    margin 0
a
    text-decoration none
html
    width 100%
    height 100%
body
    width 100%
    height 100vh
    font-family 'Philosopher', 'Arial', sans-serif
    color #000000
    font-size 25px
    font-weight 400
    line-height 30px
    overflow hidden
.page
    opacity 1
    will-change opacity
    transition opacity 0.8s ease-out
.opacity
    opacity 0
.header
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    height 100vh
    width 400px
    background #fff
    z-index 9
    position fixed
    top 0
    right 0
    transition 0.3s linear
    transform translateX(401px)
    box-shadow -2px 0px 99px 0px rgba(0 ,0 ,0 , 0.065)
    @media (max-width: 767px)
        width 320px
        transform translateX(321px)
    &-opened
        transform translateX(0)
    &__btn
        display block
        width 54px
        height 54px
        position absolute
        top 100px
        right 80px
        z-index 10
        border 0
        background url('data:image/png;base64,') no-repeat center
        padding 0
        outline none
        @media (max-width: 999px)
            background transparent
            top 0
            right 2px
    &__line
        display block
        position absolute
        width 20px
        height 2px
        background #000
        left 17px
        transition 0.3s linear
    &__line--1
        top 20px
    &__line--2
        top 26px
        opacity 1
    &__line--3
        bottom 20px
    &__nav
        display flex
        flex-wrap wrap
        flex-direction column
        justify-content center
        align-items flex-start
        overflow hidden
    &__link
        display block
        color #363636
        margin-bottom 15px
        position relative
        font-family 'Geometria', sans-serif
        font-weight 300
        font-size 22px
        font-style italic
        &:last-child
            margin-bottom 0
        &:after
            position absolute
            content ''
            left -100%
            bottom 0
            width 100%
            height 1px
            background rgba(54, 54, 54, 0.5)
            transition 0.3s ease-out
            @media (max-width: 999px)
                display none
        &:hover:after
            left 0


.opened .header__line--1
    transform rotate(45deg)
    top 26px
.opened .header__line--2
    opacity 0
.opened .header__line--3
    transform rotate(-45deg)
    bottom 26px
